<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textViewDistance"
    style="@style/list_field_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/list_field_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/listViewItemTextViewStation"
            style="@style/list_field_title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/small_padding"
            android:text="@string/station"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/list_field_item_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/listViewItemButtonGoNavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/listViewItemTextViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:text="2.99"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/field_text_color"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/listViewItemButtonGoNavi"
            android:layout_alignTop="@+id/listViewItemButtonGoNavi"
            android:layout_toLeftOf="@+id/listViewItemButtonGoNavi"
            android:layout_toRightOf="@+id/listViewItemTextViewPrice"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/listViewItemTextViewAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/field_text_color" />

            <TextView
                android:id="@+id/listViewItemTextViewDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/field_text_color" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>